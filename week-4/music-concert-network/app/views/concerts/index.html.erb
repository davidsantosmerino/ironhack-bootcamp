<section class="concerts container">
    <% @concerts.each do |concert| %>
      <%= link_to concert_path(concert) do %>
        <article class="col-xs-6 col-md-4 col-lg-3">
          <div class="img-container">
            <span class="vertical-align"></span>
            <%= image_tag concert.asset.url(:medium) %>
          </div>
          <h4><%= concert.artist %> @ <%= concert.city %></h4>
          <h5><%= concert.date.strftime("%e %b %y") %></h5>
          <p>
            <%= truncate(concert.description,  :length => 80,
                                                :separator => " ",
                                                :omission => "... (view more)") %>
          </p>
        </article>
    <% end %>
<% end %>
</section>
