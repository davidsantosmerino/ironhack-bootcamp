<article>
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @concert.asset.url(:medium) %>
      </div>
      <div class="col-md-8">
        <h2><%= @concert.artist %></h2>
        <h3>
          <%= @concert.city %> -
          <%= @concert.date.strftime("%e %b %y") %>
        </h3>
        <h4>
          (<%= @concert.venue %>)
        </h4>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8">
        <i class="fa fa-money" aria-hidden="true"></i>
        <span><strong>Price: </strong></span>
        <span><%= @concert.price %></span>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8">
        <p><%= @concert.description %></p>
      </div>
    </div>
  </div>
</article>
